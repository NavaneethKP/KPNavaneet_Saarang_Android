<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kpn.kpnavaneet_saarang_android.details">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <Button
                android:id="@+id/regbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:onClick="register"
                android:text="REGISTER now!" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="42dp"
                android:layout_toStartOf="@+id/categorytext"
                android:text="Category : "
                android:textAllCaps="false"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/categorytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:width="100dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="16dp"
                android:text="Description :"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptiontext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:isScrollContainer="true"
                android:text="TextView"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/descriptiontext"
                android:layout_below="@+id/descriptiontext"
                android:layout_marginTop="16dp"
                android:text="Schedule : "
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scheduletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView8"
                android:layout_toEndOf="@+id/textView6"
                android:text="TextView"
                android:textSize="18sp"
                android:layout_alignTop="@+id/textView8" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="13dp"
                android:text="Location : "
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignStart="@+id/scheduletext"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView10"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="13dp"
                android:text="Contact :"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cordtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp"
                android:layout_below="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_alignEnd="@+id/descriptiontext" />

            <ImageButton
                android:id="@+id/callbutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/call"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/regbutton"
                android:layout_marginStart="27dp" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>


